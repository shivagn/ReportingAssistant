@model List<Reporting.DomainModels.FinalComment>

<div class="tab-content">

    @for (int i = 0; i < Model.Count; i++)
    {
        <br />
        <div class="card">
            <div class="card-header">
                @Html.DisplayFor(temp => Model[i].AdminUsers.UserName)
                <br/>
                @Html.TextBoxFor(temp => Model[i].Screen, new { placeholder = Model[i].Screen, @class = "form-control" })
            </div>

            <div class="card-body">
                @Html.TextBoxFor(temp => Model[i].Description, new { placeholder = Model[i].Description, @class = "form-control" })
            </div>
        </div>
        
        <div>
            @Html.HiddenFor(temp => Model[i].FinalCommentID)
            @Html.HiddenFor(temp => Model[i].AdminUserID)
        </div>
    }
</div>


