@model List<Reporting.DomainModels.FinalComment> 

<div class="tab-content">

    @for (int i = 0; i < Model.Count; i++)
    {   
        <br />
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">@Model[i].Screen</h5>
            </div>

            <div class="card-body">
                <p>
                    @Model[i].Description
                </p>
            </div>
        </div>
        <div>
            @Html.HiddenFor(temp=> Model[i].FinalCommentID)
            @Html.HiddenFor(temp=> Model[i].AdminUserID)
        </div>
    }
</div>